{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false,
        "target": "ES5"
    },
    "include": ["index.d.ts"]
}
